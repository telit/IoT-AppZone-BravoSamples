<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://openmobilealliance.org/tech/profiles/LWM2M.xsd">
    <Object ObjectType="MODefinition">
        <Name>Metering rate settings</Name>
        <Description1>This LWM2M custom object manages the configuration of typical rates of a metering application</Description1>
        <ObjectID>32002</ObjectID>
        <ObjectURN>urn:oma:lwm2m:x:32002</ObjectURN>
        <LWM2MVersion>1.0</LWM2MVersion>
        <ObjectVersion>1.0</ObjectVersion>
        <MultipleInstances>Single</MultipleInstances>
        <Mandatory>Optional</Mandatory>
        <Resources>
            <Item ID="1">
                <Name>Sampling rate</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units>second</Units>
                <Description><![CDATA[Sampling rate in seconds; i.e., if set to 3600, samples are retrieved every 3600 seconds (1 hour)]]></Description>
            </Item>
			
            <Item ID="2">
                <Name>Sending rate</Name>
                <Operations>RW</Operations>
                <MultipleInstances>Single</MultipleInstances>
                <Mandatory>Mandatory</Mandatory>
                <Type>Integer</Type>
                <RangeEnumeration></RangeEnumeration>
                <Units>second</Units>
                <Description><![CDATA[Sending rate in seconds; i.e., if set to 86400, samples are retrieved every 86400 seconds (1 day) ]]></Description>
            </Item>            

        </Resources>
        <Description2/>
    </Object>
</LWM2M>