<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://openmobilealliance.org/tech/profiles/LWM2M.xsd">
      <Object ObjectType="MODefinition">
          <Name>Metering info</Name>
          <Description1>This LWM2M custom object manages the basic info a metering application</Description1>
          <ObjectID>32001</ObjectID>
          <ObjectURN>urn:oma:lwm2m:x:32001</ObjectURN>
          <LWM2MVersion>1.0</LWM2MVersion>
          <ObjectVersion>1.0</ObjectVersion>
          <MultipleInstances>Single</MultipleInstances>
          <Mandatory>Optional</Mandatory>
          <Resources>
              <Item ID="1">
                  <Name>Meter SerialNumber</Name>
                  <Operations>R</Operations>
                  <MultipleInstances>Single</MultipleInstances>
                  <Mandatory>Mandatory</Mandatory>
                  <Type>String</Type>
                  <RangeEnumeration></RangeEnumeration>
                  <Units></Units>
                  <Description><![CDATA[the Serial Number of the meter; i.e. 'AB123CD']]></Description>
              </Item>
  			
              <Item ID="2">
                  <Name>Meter FW version</Name>
                  <Operations>R</Operations>
                  <MultipleInstances>Single</MultipleInstances>
                  <Mandatory>Mandatory</Mandatory>
                  <Type>String</Type>
                  <RangeEnumeration></RangeEnumeration>
                  <Units></Units>
                  <Description><![CDATA[the FW version of the meter; i.e. '1.2']]></Description>
              </Item>

          </Resources>
          <Description2/>
      </Object>
</LWM2M>